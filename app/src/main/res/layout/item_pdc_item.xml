<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:paddingTop="2dp"
    >

    <LinearLayout
        android:id="@+id/item_pdc_item_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@drawable/item_pdc_bk"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="42dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_pdc_item_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_multiline_chart_white_24px"
            />



        <TextView
            android:id="@+id/item_pdc_item_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:textColor="@color/homeText"
            android:text="@string/pdc_man_charts"
            android:layout_marginStart="12dp"
            />


    </LinearLayout>



</LinearLayout>