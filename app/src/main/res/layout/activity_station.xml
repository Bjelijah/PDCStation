<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_login_horizontal_margin"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@color/register_bk"
    style="@style/MyAppThemeRegister"
    >

    <TextView
        android:id="@+id/station_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/station_title"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_marginBottom="15dp"
        />


    <ImageView
        android:id="@+id/station_iv"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_below="@id/station_title"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:layout_below="@id/station_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="zzzzzzzzzzzzz"/>




    </LinearLayout>


    <Button
        android:id="@+id/station_btn"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/station_entry"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/reg_ll"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        />

</RelativeLayout>