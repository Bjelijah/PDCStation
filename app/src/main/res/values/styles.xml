    </style>

    <style name="setting_btn_small">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">11dp</item>
        <item name="android:paddingRight">11dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:textColor">@color/homeText</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="wheel_dialog" parent="@android:style/Theme.Material.Dialog.Alert"/>
    
    <style name="common_spinner" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/white_highlight</item>
        <item name="android:textSize">12sp</item>
        <item name="android:colorControlNormal">@color/red</item>
    </style>
    
    
</resources>